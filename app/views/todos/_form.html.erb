<% if @todo.errors.any? %>
<h2>The following errors prevented the todo from being saved</h2>
<ul>
  <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @todo do |f| %>
  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
